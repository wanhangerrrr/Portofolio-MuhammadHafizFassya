{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "esModuleInterop": true,
        "strict": true,
        "outDir": "./dist",
        "rootDir": ".",
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "declaration": false
    },
    "include": [
        "./**/*.ts"
    ],
    "exclude": [
        "dist",
        "node_modules"
    ]
}